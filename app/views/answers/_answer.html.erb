<tr id="<%= dom_id answer %>" class="show_grid">
	<td style="width:30%"><%= answer.question.enunciation %></td>
    <td style="width:20%"><%= answer.enunciation %></td>
<% for char in answer.AnswerCharacteristicWeight %>
	<td style="width:4%"><%= (char.weight).to_s %></td>
<% end %>
    <!-- <td><%= link_to 'Show', answer, :remote => true %></td> -->
	<td><%= link_to 'addChar', {:controller => "answers", :action => "addChar", :id => answer}, :remote => true %></td>
    <td><%= link_to 'Edit', edit_answer_path(answer), :remote => true %></td>
    <td><%= link_to 'Destroy', answer, :confirm => 'Are you sure?', :method => :delete, :remote => true %></td>
 </tr>